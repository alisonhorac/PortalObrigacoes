@model IEnumerable<AHAS.PO.SERVICE.APPLICATION.ViewModels.UnidadeViewModel>
@{
    ViewBag.Title = "Unidades";
}

<div id="preloader">
    <div class="loader"></div>
</div>

@Html.Partial("_MensagemValidacao")

<div id="gridtable" hidden class="module">
    <div class="module-head">
        <h3><i class="fas fa-gifts"></i> @ViewBag.Title</h3>
    </div>
    <div class="module-body table">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped display">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CNPJ)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CNPJ)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            <a href="@Url.Action("Detalhar", "Unidade", new { id = item.IDUnidade })" class="btn btn-info btn-xs"><span class="fas fa-info-circle"></span> Detalhar</a>
                            <a href="@Url.Action("Editar", "Unidade", new { id = item.IDUnidade })" class="btn btn-info btn-xs"><span class="fas fa-pen-square"></span> Editar</a>
                            <a data-id="@item.IDUnidade" descricao="@item.Nome" class="btn btn-danger btn-xs"><span class="fas fa-eraser"></span> Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CNPJ)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>Opções</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="pull-right" style="padding-top:10px">
        <a href="@Url.Action("Adicionar", "Unidade")" class="btn btn-primary"><span class="fas fa-plus-circle"></span> Adicionar Nova Unidade</a>
    </div>
</div>

@section Styles {
    @System.Web.Optimization.Styles.Render("~/bundles/cdn/css/font-awesome-old")
    @System.Web.Optimization.Styles.Render("~/bundles/content/css/pageload")
    @System.Web.Optimization.Styles.Render("~/bundles/cdn/css/sweetalert")
    <link type="text/css" href="~/Content/css/unidade/page.index.css" rel="stylesheet">
}

@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/cdn/js/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/content/js/jquery-dataTables")
    @System.Web.Optimization.Scripts.Render("~/bundles/content/js/pageload")
    @System.Web.Optimization.Scripts.Render("~/bundles/cdn/js/sweetalert")
    <script src="~/Content/scripts/unidade/page.index.js"></script>
}