@{
    ViewBag.Title = "Início";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portal de Obrigações | @ViewBag.Title</title>
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/css/bootstrap.css" rel="stylesheet">
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css" rel="stylesheet">
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600' rel='stylesheet'>
    <link type="text/css" href="~/Content/css/theme/theme.css" rel="stylesheet">

    @if (ViewBag.Theme == "black-theme")
    {
        <link type="text/css" href="~/Content/css/shared/layout/black-menu.css" rel="stylesheet" id="black-theme">
    }
    else if (ViewBag.Theme == "gray-theme")
    {
        <link type="text/css" href="~/Content/css/shared/layout/gray-menu.css" rel="stylesheet" id="gray-theme">
    }

    @RenderSection("Styles", false)

</head>
<body>
    <!--MENU SUPERIOR-->
    @Html.Partial("_MenuSuperior")

    <div class="wrapper">
        <div class="container">
            <div class="row">

                <!--MENU LATERAL-->
                @Html.Partial("_MenuLateral")

                <!--CONTEUDO-->
                <div class="span9">
                    <div class="content">
                        @RenderBody()
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!--MENU INFERIOR-->
    @Html.Partial("_MenuInferior")

    <!-- Section for main scripts render -->
    @System.Web.Optimization.Scripts.Render("~/bundles/cdn/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/cdn/twitter-bootstrap")
    <script src="~/Content/scripts/shared/page.js" type="text/javascript"></script>

    <!-- Handler for local scripts -->
    @RenderSection("scripts", required: false)

</body>
</html>
