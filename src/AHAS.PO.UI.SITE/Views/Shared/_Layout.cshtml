@{
    ViewBag.Title = "Início";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portal de Obrigações | @ViewBag.Title</title>
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/css/bootstrap.css" rel="stylesheet">
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css" rel="stylesheet">
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600' rel='stylesheet'>
    <link type="text/css" href="~/Content/css/theme/theme.css" rel="stylesheet">

    @if (ViewBag.Theme == "black-theme")
    {
        <link type="text/css" href="~/Content/css/shared/layout/black-menu.css" rel="stylesheet" id="black-theme">
    }
    else if (ViewBag.Theme == "gray-theme")
    {
        <link type="text/css" href="~/Content/css/shared/layout/gray-menu.css" rel="stylesheet" id="gray-theme">
    }

</head>
<body>
    <!--MENU SUPERIOR-->
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a>

                <a class="brand" href="@Url.Action("Index", "Home")">Portal de Obrigações</a>

                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <ul class="nav pull-right">

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Opções Gerais
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="nav-header">Personalização</li>
                                <li><a href="#" onclick="setTheme('gray-theme')"><i class="fas fa-palette"></i>&nbsp;&nbsp;Cores do Menu</a></li>
                                <li><a href="#"><i class="far fa-image"></i>&nbsp;&nbsp;Plano de Fundo</a></li>
                            </ul>
                        </li>

                        <li><a href="#">Ajuda </a></li>

                        <li class="nav-user dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/Content/img/noun_User_17241.png" class="nav-avatar" />
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="fas fa-id-card-alt"></i>&nbsp;&nbsp;Meu Perfil</a></li>
                                <li><a href="#"><i class="far fa-address-card"></i>&nbsp;&nbsp;Dados Básicos</a></li>
                                <li><a href="#"><i class="fas fa-cog"></i>&nbsp;&nbsp;Configurações da Conta</a></li>
                                <li class="divider"></li>
                                <li><a href="#"><i class="fas fa-sign-out-alt"></i>&nbsp;&nbsp;Logout</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!--MENU LATERAL-->
    <div class="wrapper">
        <div class="container">
            <div class="row">

                <div class="span3">
                    <div class="sidebar">
                        <ul class="widget widget-menu unstyled">
                            <li class="active">
                                <a href="index.html">
                                    <i class="menu-icon fas fa-table"></i>Visão Geral Resumida
                                </a>
                            </li>
                            <li>
                                <a href="message.html">
                                    <i class="menu-icon fas fa-inbox"></i>Mensagens Importantes<b class="label green pull-right">11</b>
                                </a>
                            </li>
                            <li>
                                <a href="task.html">
                                    <i class="menu-icon fas fa-tasks"></i>Atividades Pendentes<b class="label orange pull-right">19</b>
                                </a>
                            </li>
                        </ul>

                        <ul class="widget widget-menu unstyled">
                            <li><a href="#"><i class="menu-icon fas fa-clipboard-check"></i>Definir Responsabilidade</a></li>
                            <li><a href="#"><i class="menu-icon far fa-calendar-alt"></i>Meus Agendamentos</a></li>
                            <li><a href="#"><i class="menu-icon fas fa-clipboard-list"></i>Minhas Responsabilidades </a></li>
                            <li><a href="#"><i class="menu-icon fas fa-search"></i>Outros Responsáveis</a></li>
                        </ul>

                        <ul class="widget widget-menu unstyled">
                            <li>
                                <a class="collapsed" data-toggle="collapse" href="#togglePages">
                                    <i class="menu-icon fas fa-cogs"></i>
                                    <i class="icon-chevron-down pull-right"></i>
                                    <i class="icon-chevron-up pull-right"></i>
                                    Manutenção
                                </a>
                                <ul id="togglePages" class="collapse unstyled">
                                    <li><a href="#"><i class="menu-icon icon-gift"></i>Feriados</a></li>
                                    <li><a href="#"><i class="menu-icon icon-file"></i>Documentos</a></li>
                                    <li><a href="#"><i class="menu-icon icon-briefcase"></i>Unidades</a></li>
                                    <li><a href="#"><i class="menu-icon icon-user"></i>Usuários</a></li>
                                </ul>
                            </li>
                            <li><a href="#"><i class="menu-icon fas fa-sign-out-alt"></i>Efetuar Logout</a></li>
                        </ul>
                    </div>
                </div>

                <!--CONTEUDO-->
                <div class="span9">
                    <div class="content">
                        @RenderBody()
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!--MENU INFERIOR-->
    <div class="footer">
        <div class="container">
            <b class="copyright">&copy; 2019 Portal de Obrigações - Alison Horacio </b>Todos os direitos reservados.
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/scripts/shared/page.js" type="text/javascript"></script>

</body>
</html>
