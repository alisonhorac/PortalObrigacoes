@model AHAS.PO.INFRA.CROSS.IDENTITY.Model.VerifyCodeViewModel
@{
    ViewBag.Title = "Confirmação de Telefone";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.WebSite | @ViewBag.Title</title>

    @System.Web.Optimization.Styles.Render("~/bundles/cdn/css/twitter-bootstrap")
    @System.Web.Optimization.Styles.Render("~/bundles/cdn/css/bootstrap-responsive")
    @System.Web.Optimization.Styles.Render("~/bundles/cdn/css/font-awesome-all")
    @System.Web.Optimization.Styles.Render("~/bundles/cdn/css/family-opensans")
    @System.Web.Optimization.Styles.Render("~/bundles/content/css/theme")
    <link href="~/Content/css/account/verifyCode/page.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="fas fa-bars shaded"></i>
                </a>

                <a class="brand" href="@ViewBag.URLHome">@ViewBag.WebSite</a>

                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <ul class="nav pull-right">
                        <li>
                            @Html.ActionLink("Voltar", "Login")
                        </li>
                        <li>
                            @Html.ActionLink("Esqueci minha senha!", "ForgotPassword")
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </div>

    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="module module-login span4 offset4">
                    @using (Html.BeginForm("VerifyCode", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-vertical", role = "form" }))
                    {
                        @Html.Hidden("provider", "SMS")
                        @Html.AntiForgeryToken()

                        <div class="module-head">
                            <h3>Confirmação por SMS</h3>
                        </div>

                        <div class="module-body">
                            <div class="control-group">
                                <p>
                                    Estamos há um passo de liberar o seu acesso. Por favor informe abaixo o código que você recebeu no seu celular.
                                </p>
                            </div>
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    @Html.TextBoxFor(model => model.Code, new { id = "Code", @class = "span12", @placeholder = "Código", @autocomplete = "off" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Code, null, new { @style = "font-style: italic; font-size:11px" })
                            </div>
                        </div>

                        <div class="module-foot">
                            <div class="control-group">
                                <div class="controls clearfix">
                                    <button type="submit" class="btn btn-primary pull-right">Confirmar</button>
                                </div>
                                <span class="help-block">
                                    @Html.ValidationSummary(true, null, new { @class = "text-center", @style = "font-style:italic; font-size:12px" })
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="container">
            <b class="copyright">&copy; 2019 Portal de Obrigações - Alison Horacio </b>Todos os direitos reservados.
        </div>
    </div>

    @System.Web.Optimization.Scripts.Render("~/bundles/cdn/js/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/cdn/js/twitter-bootstrap")
</body>
</html>