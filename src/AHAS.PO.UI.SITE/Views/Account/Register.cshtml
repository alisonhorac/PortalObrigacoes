@model AHAS.PO.INFRA.CROSS.IDENTITY.Model.RegisterViewModel
@{
    ViewBag.Title = "Registro";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Portal de Obrigações | @ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" rel="stylesheet" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

</head>
<body class="hold-transition login-page">
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                {
                    <div class="card-header">
                        <h3>REGISTRO</h3>
                    </div>

                    <div class="card-body">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                @Html.TextBoxFor(model => model.NameIdentifier, new { id = "Nome", @class = "form-control", @placeholder = "Nome", @autocomplete = "off" })
                            </div>
                            @Html.ValidationMessageFor(model => model.NameIdentifier, null, new { @class = "text-white", @style = "font-style: italic; font-size:10px" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                @Html.TextBoxFor(model => model.Email, new { id = "Email", @class = "form-control", @placeholder = "E-mail", @autocomplete = "off" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-white", @style = "font-style: italic; font-size:10px" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                </div>
                                @Html.DropDownListFor(model => model.DDIPhone, new SelectList(new List<SelectListItem> {
                                                                                              new SelectListItem { Text = "+55", Value = "+55"} }, "Value", "Text", "True"),
                                                                                              new { id = "DDI", @class = "form-control", @style = "max-width: 70px;" })
                                @Html.TextBoxFor(model => model.DDDPhone, new { id = "DDD", @class = "form-control", @style = "max-width: 60px;", @placeholder = "DDD", @autocomplete = "off" })
                                @Html.TextBoxFor(model => model.Phone, new { id = "Fone", @class = "form-control", @placeholder = "Celular", @autocomplete = "off" })
                            </div>
                            @Html.ValidationMessageFor(model => model.DDDPhone, null, new { @class = "text-white", @style = "font-style: italic; font-size:10px" })
                            @Html.ValidationMessageFor(model => model.Phone, null, new { @class = "text-white", @style = "font-style: italic; font-size:10px" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                @Html.PasswordFor(model => model.Password, new { id = "Senha", @class = "form-control", @placeholder = "Senha", @autocomplete = "off" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-white", @style = "font-style: italic; font-size:10px" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-check-circle"></i></span>
                                </div>
                                @Html.PasswordFor(model => model.ConfirmPassword, new { id = "ConfirmaSenha", @class = "form-control", @placeholder = "Repita a senha", @autocomplete = "off" })
                            </div>
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "text-white", @style = "font-style: italic; font-size:10px" })
                        </div>

                        <div>
                            <div class="row align-items-center terms">
                                @Html.CheckBoxFor(model => model.Terms, new { id = "Termo", @class = "form-control", @style = "margin-bottom:9px" })
                                <label> Eu concordo com os <a href="#">termos</a></label>
                            </div>
                            @Html.ValidationMessageFor(model => model.Terms, null, new { @class = "text-center text-white", @style = "font-style: italic; font-size:10px" })
                        </div>
                    </div>

                    <div class="card-footer form-group">
                        <div class="form-group">
                            <a href="@Url.Action("Login", "Account")" class="btn float-left btn-link">Voltar</a>
                            <input type="submit" value="Registrar" class="btn float-right register_btn">
                        </div>
                    </div>

                    <div class="card-footer">
                        <p>
                            <a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i>   Registro via facebook</a>
                            <a href="" class="btn btn-block btn-google"> <i class="fab fa-google-plus-g"></i>   Registro via Google+</a>
                            <a href="" class="btn btn-block btn-twitter"> <i class="fab fa-twitter"></i>   Registro via Twitter</a>
                        </p>
                    </div>

                    <span class="help-block text-center">
                        @Html.ValidationSummary(true, null, new { @class = "text-center text-danger", @style = "font-style:italic; font-size:12px" })
                    </span>
                }
            </div>
        </div>
    </div>
    <link href="~/Content/css/account/register/page.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha256-pasqAKBDmFT4eHoN2ndd6lN370kFiGUFyTiUHWhU7k8=" crossorigin="anonymous"></script>
    <script src="~/Content/scripts/account/register/page.js"></script>
</body>
</html>