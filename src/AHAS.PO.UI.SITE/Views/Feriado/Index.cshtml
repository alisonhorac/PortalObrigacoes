@model IEnumerable<AHAS.PO.SERVICE.APPLICATION.ViewModel.FeriadoViewModel>
@{
    ViewBag.Title = "Feriados";
}

<div class="preloader">
    <div class="loader"></div>
</div>

<div class="module">
    <div class="module-head">
        <h3><i class="fas fa-gifts"></i> @ViewBag.Title</h3>
    </div>
    <div class="module-body table">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                    <th>@Html.DisplayNameFor(model => model.DescricaoFlagFeriadoFixo)</th>
                    <th>@Html.DisplayNameFor(model => model.DescricaoAbrangencia)</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoFlagFeriadoFixo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoAbrangencia)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Feriado", new { id = item.IDFeriado })" class="btn btn-info btn-xs"><span class="fas fa-pen-square"></span> Editar</a>
                            <a href="@Url.Action("Details", "Feriado", new { id = item.IDFeriado })" class="btn btn-info btn-xs"><span class="fas fa-info-circle"></span> Detalhar</a>
                            <a href="@Url.Action("Delete", "Feriado", new { id = item.IDFeriado })" class="btn btn-danger btn-xs"><span class="fas fa-eraser"></span> Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                    <th>@Html.DisplayNameFor(model => model.DescricaoFlagFeriadoFixo)</th>
                    <th>@Html.DisplayNameFor(model => model.DescricaoAbrangencia)</th>
                    <th>Opções</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="pull-right" style="padding-top:10px">
        <a href="@Url.Action("Adicionar", "Feriado")" class="btn btn-primary"><span class="fas fa-plus-circle"></span> Adicionar Novo Feriado</a>
    </div>
</div>

@section Styles {
    @System.Web.Optimization.Styles.Render("~/bundles/cdn/css/font-awesome-old")
    @System.Web.Optimization.Styles.Render("~/bundles/content/css/pageload")
    <link type="text/css" href="~/Content/css/feriado/page.index.css" rel="stylesheet">
}

@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/cdn/js/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/content/js/jquery-dataTables")
    @System.Web.Optimization.Scripts.Render("~/bundles/content/js/pageload")
    <script src="~/Content/scripts/feriado/page.index.js"></script>
}